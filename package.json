{
  "name": "gains",
  "version": "0.0.11",
  "description": "All in one tools to help strength athletes load the right amount of training dosage!",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node ./src/apps/server.js",
    "build:start": "npm run build && node ./src/apps/server.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "kill:port": "./src/bin/kill-used-port.sh",
    "dev": "concurrently --kill-others --names \"EXPRESS,VUE\" -c \"bgGreen.black,bgRed.black\" \"nodemon ./src/apps/server.js\" \"vite build --watch --mode development\"",
    "dev:ui": "vite",
    "dev:api": "nodemon ./src/apps/server.js",
    "dev:hmr": "concurrently --kill-others --names \"EXPRESS,VUE\" -c \"bgGreen.black,bgRed.black\" \"HMR='true' nodemon ./src/apps/server.js\" \"open-cli http://localhost:3000/ && vite\"",
    "build": "npm run build:ui && npm run build:api && npm run minify:html",
    "build:ui": "vite build",
    "build:api": "echo api does not need to build!",
    "migrate:make": "knex migrate:make --knexfile=./src/config/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile=./src/config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile=./src/config/knexfile.js",
    "seed:make": "knex seed:make --knexfile=./src/config/knexfile.js",
    "seed:run": "knex seed:run --knexfile=./src/config/knexfile.js",
    "reset:db": "npm run migrate:rollback && npm run migrate:latest && npm run seed:run",
    "release": "standard-version",
    "release:alpha": "npm run release -- --prerelease alpha",
    "rmds": "find . -name '.DS_Store' -delete",
    "prepare": "husky install",
    "commit": "git add -A && cz",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:check": "eslint .",
    "lint": "eslint --fix .",
    "minify:html": "html-minifier --input-dir ./src --output-dir ./src --collapse-whitespace --minify-js --minify-css --remove-comments --file-ext html"
  },
  "bin": {
    "gains": "./src/apps/cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wajeht/gains.git"
  },
  "keywords": [
    "gains",
    "workout",
    "powerlifting",
    "fitness",
    "bodybuilding",
    "squat",
    "bench",
    "deadlift",
    "press"
  ],
  "author": {
    "name": "wajeht",
    "url": "https://jaw.dev/"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/wajeht/gains/issues"
  },
  "homepage": "https://github.com/wajeht/gains#readme",
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
