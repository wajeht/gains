FROM node:alpine

WORKDIR /usr/src/app

COPY ./package.json ./
COPY ./package-lock.json ./

RUN npm install
RUN apk update
RUN apk add
RUN apk add ffmpeg

COPY ./ .

RUN npm run build:ui

EXPOSE 8080

HEALTHCHECK --interval=60s --timeout=10s --start-period=20s --retries=5 CMD curl -s http://localhost:8080 || exit 1

CMD ["npm", "run", "start"]
