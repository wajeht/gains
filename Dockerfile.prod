FROM node:alpine

WORKDIR /usr/src/app

COPY ./package.json ./
COPY ./package-lock.json ./

RUN npm install
RUN apk update
RUN apk add
RUN apk add ffmpeg
RUN apk add curl

COPY ./ .

RUN npm install \
    && npm run build:ui

EXPOSE 8087

HEALTHCHECK CMD curl -f http://localhost:8087/health || exit 1

HEALTHCHECK --interval=12s --timeout=12s --start-period=30s \
    CMD node healthcheck.js

CMD ["npm", "run", "start"]
