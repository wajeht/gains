FROM node:alpine

WORKDIR /usr/src/app

COPY ./package.json ./
COPY ./package-lock.json ./

RUN npm install
RUN apk update
RUN apk add
RUN apk add ffmpeg
RUN apk --no-cache add curl

COPY ./ .

EXPOSE 8087

HEALTHCHECK CMD curl -f http://localhost:8087/health-check || exit 1

CMD ["npm", "run", "dev:hmr"]
